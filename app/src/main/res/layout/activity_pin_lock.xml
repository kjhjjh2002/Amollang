<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.PinLockActivity">

    <TextView
        android:id="@+id/pinLock_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:text="암호 입력"
        android:textColor="@color/mainColor"
        android:fontFamily="@font/font"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pinLockFailTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="암호가 틀렸습니다"
        android:fontFamily="@font/font"
        android:textColor="#FF2525"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pinLock_textView" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/pinLinear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pinLock_textView"
        app:layout_constraintVertical_bias="0.07">

        <ImageView
            android:id="@+id/pinImage1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/pin_underbar" />

        <ImageView
            android:id="@+id/pinImage2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/pin_underbar" />

        <ImageView
            android:id="@+id/pinImage3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/pin_underbar" />

        <ImageView
            android:id="@+id/pinImage4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/pin_underbar" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pinLinear"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_weight="1">

            <Button
                android:id="@+id/pin_button_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="#FF9335"
                android:text="1"
                android:fontFamily="@font/font"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/pin_button_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="#FF9335"
                android:text="2"
                android:fontFamily="@font/font"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/pin_button_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="#FF9335"
                android:text="3"
                android:fontFamily="@font/font"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_weight="1">

            <Button
                android:id="@+id/pin_button_4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="#FF9335"
                android:text="4"
                android:fontFamily="@font/font"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/pin_button_5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="#FF9335"
                android:text="5"
                android:fontFamily="@font/font"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/pin_button_6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="#FF9335"
                android:text="6"
                android:fontFamily="@font/font"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_weight="1">

            <Button
                android:id="@+id/pin_button_7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="#FF9335"
                android:text="7"
                android:fontFamily="@font/font"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/pin_button_8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="#FF9335"
                android:text="8"
                android:fontFamily="@font/font"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/pin_button_9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="#FF9335"
                android:text="9"
                android:fontFamily="@font/font"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_weight="1">

            <Button
                android:id="@+id/forget_pin_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="#ffffff"
                android:text="암호를 잊음"
                android:fontFamily="@font/font"
                android:textColor="@color/mainColor"
                android:textStyle="bold"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/pin_button_0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="#FF9335"
                android:text="0"
                android:fontFamily="@font/font"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/delete_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="#ffffff"
                android:text="삭제 "
                android:textColor="@color/mainColor"
                android:textStyle="bold"
                android:fontFamily="@font/font"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>